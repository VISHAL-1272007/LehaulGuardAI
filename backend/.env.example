# ============================================
# LegalGuard AI - Environment Variables
# ============================================
# COPY THIS FILE TO .env AND FILL IN YOUR VALUES
# .env is gitignored and will not be committed

# --- 1. GENERAL SERVER SETTINGS ---
APP_NAME="LegalGuard AI"
DEBUG=True
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000

# --- 2. SECURITY & AUTHENTICATION ---
# IMPORTANT: Generate a secure secret key using:
# python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# --- 3. DATABASE CONFIGURATION ---
# Development (SQLite)
DATABASE_URL=sqlite:///./legal_metrology.db

# Production (PostgreSQL - use Render's connection string)
# DATABASE_URL=postgresql://user:password@host:port/database

# --- 4. TESSERACT OCR CONFIGURATION ---
TESSDATA_PREFIX=/usr/share/tesseract-ocr/4.00/tessdata

# --- 5. CORS SETTINGS ---
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3002,http://localhost:5173

# --- 6. FILE UPLOAD SETTINGS ---
MAX_FILE_SIZE_MB=10
UPLOAD_DIR=./uploads
REPORTS_DIR=./reports

# --- 7. OCR SETTINGS ---
OCR_LANGUAGES=eng+tam
OCR_DPI=300
CONFIDENCE_THRESHOLD=60.0

# --- 8. AI FEATURES ---
ENABLE_FUZZY_MATCHING=True
ENABLE_PII_MASKING=True
ENABLE_FORGERY_DETECTION=True
ENABLE_EXPLAINABLE_AI=True

# --- 9. LOGGING ---
LOG_LEVEL=INFO
LOG_FILE=legalguard.log

# --- 10. PRODUCTION SETTINGS (Set in Render dashboard) ---
# SECRET_KEY=<auto-generated-by-render>
# DATABASE_URL=<postgres-connection-string-from-render>
# ENVIRONMENT=production
# DEBUG=False
